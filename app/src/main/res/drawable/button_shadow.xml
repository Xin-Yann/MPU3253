<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color -->
            <corners android:radius="8dp" /> <!-- Button corner radius -->
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="3dp" android:top="3dp">
        <shape>
            <corners android:radius="8dp" /> <!-- Button corner radius -->
            <solid android:color="#50CCCCCC" /> <!-- Shadow color -->
        </shape>
    </item>
</layer-list>
